{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "www",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
	],
	"headers": [
		{ "source":"**/*.html", "headers": [{"key": "Cache-Control", "value": "max-age=0, no-cache"}] }
	  ]
  }
}
